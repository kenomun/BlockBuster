<tr id="<%= dom_id(client) %>" class="<%= is_show_view ? 'show-view' : '' %>">
  <th scope="row"><%= client.id %></th>
  <td><%= client.name %></td>
  <td><%= client.age %></td>
  <td><%= client.movies.last %></td>
  <% unless is_show_view %>
    <td><%= link_to "Mostrar cliente", client, class: "btn btn-outline-info btn-sm" %></td>
  <% end %>
  <td><%= link_to "Editar cliente", edit_client_path(client), class: "btn btn-outline-warning btn-sm" %></td>
  <td><%= button_to "Eliminar cliente", client, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
</tr>



