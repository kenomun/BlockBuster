<div class="container">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: movie, class: "form") do |form| %>
        <% if movie.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(movie.errors.count, "Error al guardar pelÃ­cula") %></h2>
            <ul>
              <% movie.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :Nombre %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :cliente %>
          <%= form.select :client_id, options_for_select(@clients), { }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Guardar", class: "btn btn-outline-success mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

